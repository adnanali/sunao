<h1>New Content</h1>

<% form_for(@content, :url => admin_content_index_path, :html => {:multipart => true}) do |f|%>

  <p>
    <%= f.label :type  %>
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.label :title  %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body  %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :public %>
    <%= f.check_box :public %>
  </p>
  <p>
    <%= f.label "Attachment" %>
    <%= f.file_field "attachment" %>
  </p>

  <p>
    <%= submit_tag 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admin_content_index_path %>
